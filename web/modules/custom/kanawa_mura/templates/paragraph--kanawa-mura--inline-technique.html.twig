{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}
{% block paragraph %}
	{% block content %}
			<span class="inline-technique-title">{{ paragraph.field_title.value }}</span> - <span class="inline-technique-description">{{ paragraph.field_description.value|raw }}</span>			
	{% endblock %}
{% endblock paragraph %}