{#
/**
 * @file
 * Default theme implementation to display a single views grouping.
 *
 * Available variables:
 * - view: The view object.
 * - grouping: The grouping instruction.
 * - grouping_level: A number indicating the hierarchical level of the grouping.
 * - title: The group heading.
 * - content: The content to be grouped.
 * - rows: The rows returned from the view.
 *
 * @see template_preprocess_views_view_grouping()
 *
 * @ingroup themeable
 */
#}

{% set grouping = 'clan-grouping' %}

{% if title %}
     {% set machine_name = title|lower|replace( {' ':'-'} ) %} 
     
     {% if machine_name == 'great-clans' or machine_name == 'minor-clans' or machine_name == 'lost-clans' %}
          {% set grouping = 'greater-clan-grouping' %}
     {% endif %}
{% endif %}

<div class="{{ grouping }} accordion {{ title|lower|replace( {' ':'-'} ) }}">
     {% if title %}
          <div class="accordion-item">
               <h2 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#{{ schoolGrouping }}-accordion" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                         {{ title }}
                    </button>
               </h2>

               <div id="{{ schoolGrouping }}-accordion" class="accordion-collapse collapse show">
                    <div class="accordion-body">               
     {% endif %}
                         {{ content }}
     {% if title %}
                    </div>
               </div>
          </div>
     {% endif %}
</div>