<{{ fields.title.wrapper_element }}{{ fields.title.wrapper_attributes }}>
     <{{ fields.title.element_type }}{{ fields.title.element_attributes }}>
          {% if row.search_result %}
               <div class="search-result-row-header">     
                    <div class="result-title">
                         <a href="{{ row.link }}" title="{{ fields.title.content }}">{{ fields.title.content }}</a>{% if fields.source %} [{{ fields.source.content }}]{% endif %}
                    </div>

                    <div class="result-type">
                         <span class="result-icon"><i class="fa-solid fa-vihara"></i></span>Kiho
                    </div>
               </div>
          {% else %}
               <a id="{{ fields.title.content }}" class="anchor"></a>{{ fields.title.content }}{% if fields.source %} [{{ fields.source.content }}]{% endif %}     
          {% endif %}
     </{{ fields.title.element_type }}>
</{{ fields.title.wrapper_element }}>

<ul class="grouped-list">
     <li>
          <{{ fields.trait.wrapper_element }}{{ fields.trait.wrapper_attributes }}>
               <span class="label">Ring/Mastery</span><span class="inline-field-value">{{ fields.trait.content }} {{ fields.rank.content }}{% if fields.field_keywords %} ({{ fields.field_keywords.content }}){% endif %}</span>
          </{{ fields.trait.wrapper_element }}>          
     </li>

     <li>
          <{{ fields.kiho_type.wrapper_element }}{{ fields.kiho_type.wrapper_attributes }}>
               <span class="label">Type</span><span class="inline-field-value">{{ fields.kiho_type.content }}</span>
          </{{ fields.kiho_type.wrapper_element }}>          
     </li> 
</ul>

{% if fields.body %}
     <{{ fields.body.wrapper_element }}{{ fields.body.wrapper_attributes }}>
          {{ fields.body.content }}
     </{{ fields.body.wrapper_element }}>
{% endif %}